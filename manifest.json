{
  "manifest_version": 3,
  "name": "DevXWorld Risk Scanner",
  "version": "1.0",
  "description": "Scan website risk using AI heuristics",
  "permissions": ["scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
